<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/cropNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crop Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cropPriceTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Price: $100"
        app:layout_constraintTop_toBottomOf="@id/cropNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/producerNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seller: John"
        app:layout_constraintTop_toBottomOf="@id/cropPriceTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bid Count TextView -->
    <TextView
        android:id="@+id/bidCountTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bids: 5"
        app:layout_constraintTop_toBottomOf="@id/producerNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
