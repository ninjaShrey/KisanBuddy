<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#D3C8B8">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/logo" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/emailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:textColor="@color/inputTextColor"
        android:textColorHint="@color/hintTextColor" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:textColor="@color/inputTextColor"
        android:textColorHint="@color/hintTextColor"
        android:layout_marginTop="12dp" />

    <!-- Role Selection Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register as:"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <!-- User Role RadioGroup -->
    <RadioGroup
        android:id="@+id/userRoleRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <!-- Consumer Radio Button -->
        <RadioButton
            android:id="@+id/consumerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Consumer"
            android:textColor="@color/textPrimary" />

        <!-- Producer Radio Button -->
        <RadioButton
            android:id="@+id/producerRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Producer"
            android:textColor="@color/textPrimary" />

    </RadioGroup>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@drawable/rounded_button"
    android:textColor="@color/buttonTextColor"
    android:layout_marginTop="20dp"
    android:elevation="4dp" />

    <!-- Already have account Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:layout_marginTop="16dp"
        android:textColor="@color/textSecondary" />

    <!-- Login Button -->
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/rounded_button"
    android:textColor="@color/buttonTextColor"
    android:layout_marginTop="8dp"
    android:elevation="4dp" />

</LinearLayout>
