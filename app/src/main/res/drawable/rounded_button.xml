<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when the button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColorPressed" /> <!-- Darker Green -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- State when the button is disabled -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColorDisabled" /> <!-- Light Green for Disabled -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default state (enabled and not pressed) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor" /> <!-- Normal Green -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
